import sys
import datetime

args = sys.argv

list_haru_aka = ["ヘビイチゴ","アリウム","ルピナス","スイートピー","ムラサキカタバミ","デージー","ノアザミ","アネモネ","ナガミヒゲナシ"]
list_haru_ao = ["オオイヌノフグリ","クロッカス","ミヤコスワレ","ヤグルマギク","デルフィニウム","ネモフィラ","クレチマス","ムスカリ"]
list_haru_siro = ["マーガレット","スイセン","ニリンソウ","セイヨウノコギリソウ","シロツメグサ","スノードロップ","イベリス","",]
list_haru_ki = ["タンポポ","キンセンカ","キジムシロ","セイヨウアブラナ","クサノオウ","フクジュソウ","チューリップ","コウゾリナ"]

list_natu_aka = ["ランタナ","日々草","ハイビスカス","ヒルザキツキミソウ","ペチュニア","サルビア","ハナトラノオ","バーベナ","クサキョウチクトウ"]
list_natu_ao = ["朝顔","キキョウ","ツユクサ"]
list_natu_siro = ["日々草","アスチルベ","オニユリ","スイレン","ハス","マツバボタン","ポーチュラカ","オモダカ"]
list_natu_ki = ["ひまわり","ランタナ","ガザニア","ルドベキア","メランポジウム","カンナ","グラジオラス"]

list_aki_aka = ["ダリア","コスモス","シオン","ゼラニウム","ケイトウ","ヒガンバナ","サフラン"]
list_aki_ao = ["コルチカム","リンドウ"]
list_aki_siro = ["コダチダリア","シュウマイギク","ホテイアオイ","ハマギク"]
list_aki_ki = ["マリーゴールド","ヒオウギ","カラスノゴマ","","","","","",""]

list_fuyu_aka = ["シクラメン","クリスマスローズ"]
list_fuyu_ao = ["バンジー","ビオラ","シクラメン"]
list_fuyu_siro = ["バンジー","ビオラ","ハボタン"]
list_fuyu_ki = ["バンジー","ビオラ"]





if len(args) == 1:
    print("なんか入れて")

elif args[1] == "春":
    if len(args) == 3:

        if args[2] == "赤":
            print(list_haru_aka[0:])
        elif args[2] == "青":
            print(list_haru_ao[0:])
        elif args[2] == "白":
            print(list_haru_siro[0:])
        elif args[2] == "黄":
            print(list_haru_ki[0:])

    elif len(args) == 2:

        print("赤")
        print(list_haru_aka[0:])
        print("青")
        print(list_haru_ao[0:])
        print("白")
        print(list_haru_siro[0:])
        print("黄")
        print(list_haru_ki[0:])

elif args[1] == "夏":

    if len(args) == 3:

        if args[2] == "赤":
            print(list_natu_aka[0:])
        elif args[2] == "青":
            print(list_natu_ao[0:])
        elif args[2] == "白":
            print(list_natu_siro[0:])
        elif args[2] == "黄":
            print(list_natu_ki[0:])

    elif len(args) == 2:

        print("赤")
        print(list_natu_aka[0:])
        print("青")
        print(list_natu_ao[0:])
        print("白")
        print(list_natu_siro[0:])
        print("黄")
        print(list_natu_ki[0:])

elif args[1] == "秋":

    if len(args) == 3:

        if args[2] == "赤":
            print(list_aki_aka[0:])
        elif args[2] == "青":
            print(list_aki_ao[0:])
        elif args[2] == "白":
            print(list_aki_siro[0:])
        elif args[2] == "黄":
            print(list_aki_ki[0:])

    elif len(args) == 2:

        print("赤")
        print(list_aki_aka[0:])
        print("青")
        print(list_aki_ao[0:])
        print("白")
        print(list_aki_siro[0:])
        print("黄")
        print(list_aki_ki[0:])

elif args[1] == "冬":

    if len(args) == 3:

        if args[2] == "赤":
            print(list_fuyu_aka[0:])
        elif args[2] == "青":
            print(list_fuyu_ao[0:])
        elif args[2] == "白":
            print(list_fuyu_siro[0:])
        elif args[2] == "黄":
            print(list_fuyu_ki[0:])

    elif len(args) == 2:

        print("赤")
        print(list_fuyu_aka[0:])
        print("青")
        print(list_fuyu_ao[0:])
        print("白")
        print(list_fuyu_siro[0:])
        print("黄")
        print(list_fuyu_ki[0:])

elif args[1] == "初心者":
    print("まずは道具をそろえよう！")
    print("プランターと土があればとりあえずは大丈夫！")
    print("余裕があれば液肥も用意しよう！")
    print("まずは安くて育てやすい花から始めてみよう！")
    dt_now = datetime.datetime.now()
    print("今は",dt_now.month,"月だね")
    if 9 <= dt_now.month <= 11:
        print("秋ならマリーゴールドとかはどうかな？")
        print("100円台で買えるとこもあるんじゃないかな？")
    elif 3 <= dt_now.month <= 6:
        print("春ならデルフィニウムやマーガレットはどうだろう？")
        print("個人的にはデルフィニウムがすごく好きかな！")
        print("比較的高めかもだけど、500円くらいだろうし")
    elif 7 <= dt_now.month <= 8:
        print("夏なら朝顔が定番だよね")
        print("日日草も簡単だし、秋くらいまで咲いてくれるよ！")
        print("値段も100円台だろうしね")
    elif 12 <= dt_now.month <= 2:
        print("冬はちょっと咲く花は少な目かなぁ")
        print("シクラメンやバンジーなんかがいいんじゃないかな？")
        print("バンジーは結構安めだよ！")
    print("どんな花もある程度の日照量は必要だね。")
    print("もし、日当たりが良くない家なら多肉や苔という選択肢もアリだと思うよ！")
    print("詳しくは苔テラリウムとかで検索してみよう！")

else:
    print("形式が違うよ！")
