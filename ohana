    if len(args) == 3:

        if args[2] == "赤":
            print(list_haru_aka[0:])
        elif args[2] == "青":
            print(list_haru_ao[0:])
        elif args[2] == "白":
            print(list_haru_siro[0:])
        elif args[2] == "黄":
            print(list_haru_ki[0:])

